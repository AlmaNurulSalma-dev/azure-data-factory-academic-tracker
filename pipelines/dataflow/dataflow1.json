{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_adls_papers_raw",
						"type": "DatasetReference"
					},
					"name": "rawPapers"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_adls_papers_processed",
						"type": "DatasetReference"
					},
					"name": "sinkProcessed"
				}
			],
			"transformations": [
				{
					"name": "selectColumns"
				},
				{
					"name": "flattenData"
				},
				{
					"name": "transformColumns"
				},
				{
					"name": "dropRawColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          data as (abstract as string, authors as (authorId as long, name as string)[], citationCount as short, openAccessPdf as (disclaimer as string, license as string, status as string, url as string), paperId as string, title as string, year as short)[],",
				"          next as short,",
				"          offset as boolean,",
				"          total as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'documentPerLine') ~> rawPapers",
				"flattenData select(mapColumn(",
				"          abstract,",
				"          authors_raw = authors,",
				"          citationCount,",
				"          paperId,",
				"          title,",
				"          year",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectColumns",
				"rawPapers foldDown(unroll(data, data),",
				"     mapColumn(",
				"          abstract = data.abstract,",
				"          authors = data.authors,",
				"          citationCount = data.citationCount,",
				"          paperId = data.paperId,",
				"          title = data.title,",
				"          year = data.year",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flattenData",
				"selectColumns derive(abstract = iif(isNull(abstract), 'N/A', abstract),",
				"          ingested_at = currentTimestamp(),",
				"          authors = toString(authors_raw)) ~> transformColumns",
				"transformColumns select(mapColumn(",
				"          abstract,",
				"          citationCount,",
				"          paperId,",
				"          title,",
				"          year,",
				"          ingested_at,",
				"          authors",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> dropRawColumns",
				"dropRawColumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinkProcessed"
			]
		}
	}
}